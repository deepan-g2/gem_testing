# CodeHealer Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=username/repository_name

# Git Branch Configuration
HEALING_BRANCH_PREFIX=evolve
PR_TARGET_BRANCH=main

# Git Operations
AUTO_COMMIT=true
AUTO_PUSH=true
AUTO_CREATE_PR=true

# Evolution Strategy
EVOLUTION_METHOD=api
FALLBACK_TO_API=true

# Allowed Classes
ALLOWED_CLASSES=User,Order,PaymentProcessor
EXCLUDED_CLASSES=ApplicationController,ApplicationRecord
ALLOWED_ERROR_TYPES=ZeroDivisionError,NoMethodError,ArgumentError,TypeError

# Safety
BACKUP_BEFORE_EVOLUTION=true
ROLLBACK_ON_SYNTAX_ERROR=true
MAX_EVOLUTIONS_PER_DAY=10

# Claude Code Terminal (if enabled)
CLAUDE_CODE_ENABLED=false
CLAUDE_TIMEOUT=300
CLAUDE_MAX_FILE_CHANGES=10
CLAUDE_INCLUDE_TESTS=true

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379/0
